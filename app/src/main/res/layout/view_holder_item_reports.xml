<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_report"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/dimen_15"
    android:paddingHorizontal="@dimen/dimen_15"
    android:layout_marginTop="@dimen/dimen_5"
    android:layout_marginHorizontal="@dimen/dimen_5"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_account_rectangle">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_art"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_circle_bg"
        tools:src="@drawable/ic_aeps_txn_pending"
        android:padding="@dimen/dimen_2"
        android:layout_margin="@dimen/dimen_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/iv_share"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_share"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_circle_bg"
        android:src="@drawable/ic_share"
        android:layout_margin="@dimen/dimen_2"
        android:padding="@dimen/dimen_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_art"
        app:layout_constraintBottom_toTopOf="@+id/iv_invoice"
        app:layout_constraintVertical_weight="1"
        android:visibility="visible"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_invoice"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/ic_circle_bg"
        android:src="@drawable/ic_invoice_icon"
        android:layout_margin="@dimen/dimen_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_share"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_weight="1"
        android:padding="@dimen/dimen_5"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_id"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_dimen_14"
        android:fontFamily="@font/bw_modelica_medium"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/dimen_10"
        app:layout_constraintEnd_toStartOf="@+id/iv_art"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:textColor="@color/black"
        tools:text="@tools:sample/lorem" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_mobile"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_dimen_15"
        android:fontFamily="@font/bw_modelica_bold"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/lbl_id"
        app:layout_constraintStart_toStartOf="@+id/lbl_id"
        app:layout_constraintTop_toBottomOf="@+id/lbl_id"
        tools:textColor="@color/black"
        tools:text="@tools:sample/lorem" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_dimen_14"
        android:fontFamily="@font/bw_modelica_medium"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_4"
        app:layout_constraintEnd_toEndOf="@+id/lbl_id"
        app:layout_constraintStart_toStartOf="@+id/lbl_id"
        app:layout_constraintTop_toBottomOf="@id/lbl_mobile"
        tools:textColor="@color/black"
        tools:text="@tools:sample/lorem" />
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="@dimen/txt_dimen_14"
        android:fontFamily="@font/bw_modelica_medium"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_4"
        app:layout_constraintEnd_toEndOf="@+id/lbl_id"
        app:layout_constraintStart_toStartOf="@+id/lbl_id"
        app:layout_constraintTop_toBottomOf="@id/lbl_amount"
        tools:textColor="@color/black"
        tools:text="@tools:sample/lorem" />


</androidx.constraintlayout.widget.ConstraintLayout>